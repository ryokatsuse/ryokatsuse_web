---
import { SITE_TITLE } from '../config';
---

<header class="bg-neutral-800">
  <div class="flex items-center justify-between max-w-3xl m-auto p-4">
    <a
      class="flex items-center gap-x-2 w-fit text-white"
      href={Astro.url.pathname !== '/' ? '/' : null}
      rel="prefetch"
    >
      <img class="w-7 rounded-full bg-white" src="/favicon.svg" width="48" height="48" alt="" decoding="async" />
      {SITE_TITLE}
    </a>
    <ul class="flex gap-x-2">
      <li><a class="text-white underline hover:hover:no-underline" href="https://x.com/ryo__kts">X</a></li>
      <li><a class="text-white underline hover:hover:no-underline" href="/posts-feed.xml">RSS</a></li>
    </ul>
  </div>
</header>
