---
import { SITE_TITLE } from '../config';
---

<header class="bg-neutral-800 mb-8">
  <div class="flex justify-between max-w-3xl m-auto p-4">
    <a
      class="flex items-center gap-x-2 w-fit text-slate-400"
      href={Astro.url.pathname !== '/' ? '/' : null}
      rel="prefetch"
    >
      <img class="w-7 rounded-full bg-white" src="/favicon.svg" width="48" height="48" alt="" decoding="async" />
      {SITE_TITLE}
    </a>
